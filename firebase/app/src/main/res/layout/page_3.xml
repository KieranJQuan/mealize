<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue">

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="select a grocery store near you:"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="20dp" />

    <Button
        android:id="@+id/page_3_button_1"
        android:onClick="page_3_button_1"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/colorWhite"
        android:text="enter"
        android:textAllCaps="false"
        android:textColor="@color/colorBlue"
        android:textSize="20dp" />

    <Button
        android:id="@+id/page_3_button_2"
        android:onClick="page_3_button_2"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/colorWhite"
        android:text="enter"
        android:textAllCaps="false"
        android:textColor="@color/colorBlue"
        android:textSize="20dp" />

    <Button
        android:id="@+id/page_3_button_3"
        android:onClick="page_3_button_3"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/colorWhite"
        android:text="enter"
        android:textAllCaps="false"
        android:textColor="@color/colorBlue"
        android:textSize="20dp" />

</LinearLayout>